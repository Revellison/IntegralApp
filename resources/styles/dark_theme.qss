/* Стили для виджета приложений */
AppsWidget {
    background-color: #161616;
    border-radius: 10px;
    border: 1px solid #2e2e2e;
}

AppsWidget QScrollArea {
    background: transparent;
    border: none;
}

AppsWidget QScrollArea > QWidget > QWidget {
    background: transparent;
}

CategoryWidget QWidget[objectName="buttons_container"] {
    background-color: #111111;
    border-radius: 10px;
}


AppsWidget QPushButton {
    background-color: #1d1d1d;
    border-radius: 10px;
    border: 1px solid #2e2e2e;
    padding: 5px;
}

AppsWidget QPushButton:hover {
    background-color: #252525;
}

AppsWidget QPushButton:pressed {;
}

AppsWidget QToolTip {
    background-color: #2d2d2d;
    color: #ffffff;
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    padding: 5px;
}

/* calc */
MiniCalculatorUI QLineEdit
    {
        padding: 3px;
        border-radius: 5px;
    }

MiniCalculatorUI QPushButton {
    background-color: #161616;
    color: white;
    border: 0px solid transparent;
    border-radius: 5px;
    font-size: 16px;
    padding: 10px;
    margin: 1px;
}

MiniCalculatorUI QPushButton:hover {
    background-color: #1a1a1a;
    border: 1px solid white;
    color: white;
}


MiniCalculatorUI QPushButton:pressed {
    background-color: #232323;
    border: 1px solid white;
    color: white;
}

/* func */

#function_lineEdit
    {
    padding-left: 3px;
    font-size: 14px;
    color: white;
    }
#function_lineEdit:focus
    {
    border: 2px solid white;
